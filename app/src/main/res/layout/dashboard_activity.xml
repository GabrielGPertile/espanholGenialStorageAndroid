<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Conteúdo principal -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Barra superior com ícone de hambúrguer -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#104e8b"
            android:title="Meu App"
            android:titleTextColor="@android:color/white"/>

        <!-- Área rolável -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <!-- Guideline vertical para dividir a tela em 2 colunas -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <!-- Imagem 1 (esquerda) -->
                <ImageView
                    android:id="@+id/ivInserirAudio"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo_inserir_audio"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvInserirAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inserir Áudio"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/ivInserirAudio"
                    app:layout_constraintStart_toStartOf="@id/ivInserirAudio"
                    app:layout_constraintEnd_toEndOf="@id/ivInserirAudio"/>

                <!-- Imagem 2 (direita) -->
                <ImageView
                    android:id="@+id/ivInserirImagem"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo_inserir_imagem"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ivInserirAudio"/>

                <TextView
                    android:id="@+id/tvInserirImagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inserir Imagem"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/ivInserirImagem"
                    app:layout_constraintStart_toStartOf="@id/ivInserirImagem"
                    app:layout_constraintEnd_toEndOf="@id/ivInserirImagem"/>

                <!-- Imagem 3 (linha 2 esquerda) -->
                <ImageView
                    android:id="@+id/ivInserirVideos"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo_inserir_video"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
                    app:layout_constraintTop_toBottomOf="@id/ivInserirAudio"/>

                <TextView
                    android:id="@+id/tvInserirVideos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inserir Vídeos"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/ivInserirVideos"
                    app:layout_constraintStart_toStartOf="@id/ivInserirVideos"
                    app:layout_constraintEnd_toEndOf="@id/ivInserirVideos"/>

                <!-- Imagem 4 (linha 2 direita) -->
                <ImageView
                    android:id="@+id/ivInserirFuturasAtualizacoes"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo_inserir_futuras_atualizacao"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivInserirImagem"/>

                <TextView
                    android:id="@+id/tvInserirFuturasAtualizacoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Futuras Atualizações"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/ivInserirFuturasAtualizacoes"
                    app:layout_constraintStart_toStartOf="@id/ivInserirFuturasAtualizacoes"
                    app:layout_constraintEnd_toEndOf="@id/ivInserirFuturasAtualizacoes"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Conteúdo principal -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- MENU LATERAL (VERTICAL À ESQUERDA) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#104e8b"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        app:itemVerticalPadding="12dp"
        app:itemHorizontalPadding="8dp"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/black"
        app:itemBackground="@drawable/item_quadrado"
        app:itemTextAppearance="@style/NavDrawerText"/>

</androidx.drawerlayout.widget.DrawerLayout>
