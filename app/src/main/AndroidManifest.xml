<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EspanholGenialStorageAndroid"
        tools:targetApi="31" >

        <!-- Configuração do LoadingActivity -->
        <activity
            android:name=".activity.LoadingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Configuração do loginActivity -->
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Configuração do ForgetPasswordReset -->
        <activity
            android:name=".activity.ForgetPasswordReset"
            android:exported="true">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Configuração do DashboardActivity -->
        <activity
            android:name=".activity.DashboardActivity"
            android:exported="true">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Configuração do UserActivity -->
        <activity
            android:name=".activity.UserActivity"
            android:exported="true">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Configuração do UserPerfileEditableActivity -->
        <activity
            android:name=".activity.UserPerfileEditableActivity"
            android:windowSoftInputMode="stateHidden"
            android:exported="true">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Configuração do CreatePhotoStorageActivity -->
        <activity
            android:name=".activity.CreatePhotoStorageActivity"
            android:exported="true">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>